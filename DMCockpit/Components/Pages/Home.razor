@using MudBlazor

@page "/"

<MudButtonGroup Color="Color.Primary" Variant="Variant.Text">
    <MudButton Variant="Variant.Filled" OnClick="NewPlayerWindow" hidden="@(playerWindow != null)" StartIcon="@Icons.Material.Filled.Add" Disabled=@(playerWindow != null)>Player Window</MudButton>

    <MudFileUpload T="IBrowserFile" FilesChanged="UploadFiles" Style="margin-top:0px !important">
        <ButtonTemplate>
            <MudButton HtmlTag="label"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       for="@context.Id">
                Select Map
            </MudButton>
        </ButtonTemplate>
    </MudFileUpload>
</MudButtonGroup>

<br />
<div class="draggable" id="mapViewPort">Over</div>

@if (!String.IsNullOrEmpty(imageBase64))
{
    <div class="image-container">
        <MudImage src="@imageBase64" ObjectFit="ObjectFit.ScaleDown" Height="900" Width="1600" />
    </div>
}

<style>
    .draggable {
        position: absolute;
        top: 1rem;
        left: 1rem;
        width: 200px; /* Adjust the width and height as needed */
        height: 200px;
        border: 2px solid black; /* Border color and thickness */
        box-sizing: border-box; /* Include border in width and height */
        z-index: 999; /* Ensure it's above the image */
    }

    .image-container {
        position: relative;
    }
</style>
